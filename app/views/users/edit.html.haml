- content_for :title do
  %title= "Editing #{@user.name}'s dossier."
  
%h1= "Edit #{@user.name}'s dossier."

= form_for(@user) do |f| 
  = render 'fields', :f => f
  .actions
    = f.submit "Save changes"
 
%h3 Cancel my account
%p
  Unhappy? #{link_to Themes::current_theme['users']['cancel_account'], |
    @user , confirm: "Are you sure?", method: :delete}.                |
= link_to "Back", :back
